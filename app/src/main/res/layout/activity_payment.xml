<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dell.sushisystem.PopUpActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="30dp"
        android:layout_weight="1.19"
        android:text="กรุณาเลือกวิธีชำระเงิน โดย กดที่ปุ่ม 'เรียกเก็บเงิน' หรืออื่นๆ"
        android:textAlignment="center"
        android:textColor="#190707"
        android:textSize="20sp"/>


    <Button
        android:id="@+id/cash_button"
        android:layout_width="220dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:background="@color/colorAccent"
        android:text="เรียกเก็บเงิน"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:textStyle="bold"/>


    <Button
        android:id="@+id/master_button"
        android:layout_width="220dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="220dp"
        android:background="@drawable/mastercard"/>



</RelativeLayout>